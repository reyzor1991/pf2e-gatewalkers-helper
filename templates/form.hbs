<form autocomplete="off" onsubmit="event.preventDefault();">
    <div class="form-group">
        <label for="stage">Stage (From 1 to 4)</label>
        <div class="form-fields">
            <input type="number" min="1" max="4" name="stage" value="{{state.stage}}"/>
        </div>
    </div>
    <div class="form-group">
        <label for="backlash">Backlash (From 1 to 3)</label>
        <div class="form-fields">
            <input type="number" min="1" max="3" name="backlash" value="{{state.backlash}}"/>
        </div>
    </div>
    <div class="form-group">
        <label for="canUse">Can Use Deviant during day (False when on Severe stage)</label>
        <div class="form-fields">
                <input type="checkbox" name="canUse" {{checked state.canUse}} />
        </div>
    </div>

    <div class="form-group buttons">
        <button type="submit" name="submit">
            <i class="far fa-save"></i> Save
        </button>
    </div>
</form>